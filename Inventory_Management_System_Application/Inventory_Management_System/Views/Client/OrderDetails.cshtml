@model Inventory_Management_System.ViewModels.OrderDetailsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link href="~/css/site.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* General styles */
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: black;
        }

        .card {
            margin-bottom: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .card-body {
            padding: 20px;
        }

        .badge-secondary {
            background-color: #6c757d;
        }

        .order-items-table th,
        .order-items-table td {
            vertical-align: middle;
        }

        .btn-cancel {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-cancel:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>Order Details</h2>

        @if (Model != null)
        {
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Order ID:</dt>
                        <dd class="col-sm-9">@Model.OrderId</dd>

                        <dt class="col-sm-3">Order Date:</dt>
                        <dd class="col-sm-9">@Model.OrderDate.ToString("MM/dd/yyyy")</dd>

                        <dt class="col-sm-3">Order Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.OrderStatus == "Canceled" || Model.OrderStatus == "Delivered")
                            {
                                <span class="badge badge-secondary">@Model.OrderStatus</span>
                            }
                            else
                            {
                                <select id="orderStatus" class="form-control">
                                    <option value="Pending">Pending</option>
                                    <option value="On-The-Way">On the Way</option>
                                </select>
                            }
                        </dd>

                        <dt class="col-sm-3">Total Amount:</dt>
                        <dd class="col-sm-9">$@Model.TotalAmount</dd>

                        <dt class="col-sm-3">Shipping Address:</dt>
                        <dd class="col-sm-9">@Model.ShippingAddress</dd>

                        <dt class="col-sm-3">Order Items:</dt>
                        <dd class="col-sm-9">
                            <table class="table table-bordered order-items-table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>$@item.Price</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </dd>
                    </dl>

                    @if (Model.OrderStatus != "Canceled" && Model.OrderStatus != "Delivered")
                    {
                        <div class="text-center mt-4">
                            <button id="Cancel" class="btn btn-success">Cancel</button>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <p>Order details not found.</p>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.btn-cancel').click(function () {
                var orderId = $(this).data('order-id');

                if (confirm('Are you sure you want to cancel this order?')) {
                    $.ajax({
                        url: '/api/Client/CancelOrder/' + orderId,
                        type: 'POST',
                        success: function (response) {
                            alert('Order has been canceled.');
                            location.reload(); // Refresh the page to update the order history
                        },
                        error: function (xhr, status, error) {
                            alert('Failed to cancel order: ' + xhr.responseText);
                        }
                    });
                }
            });
        });
    </script>

</body>
</html>
