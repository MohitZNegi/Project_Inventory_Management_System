    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weekly Spend Report</title>
    <link href="~/css/site.css" rel="stylesheet">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <style>
        /* General styles */
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: black;
        }

        .weekly-spend-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
            position: relative;
        }

        .weekly-spend-cards {
            display: flex;
            overflow-x: auto;
            scroll-behavior: smooth;
            scroll-snap-type: x mandatory;
            gap: 20px;
        }

        .weekly-spend-card {
            flex: 0 0 300px;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
            scroll-snap-align: center;
        }

        .arrow-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1;
        }

        .prev-btn {
            left: 10px;
        }

        .next-btn {
            right: 10px;
        }

        #weeklySpendChart {
            width: 100%;
            height: 400px;
        }
        /* Footer */
        footer {
            background-color: #343a40;
            color: #fff;
            padding: 10px 0;
            text-align: left; /* Align text to the left */
            width: 146.2%;
            position: relative;
            margin-top: 25px;
            margin-left: -300px;
            margin-bottom: -40px;
        }

            footer button.btn-primary {
                background-color: #0d6efd;
                border-color: #0d6efd;
                color: #fff;
                padding: 6px 10px; /* Adjust button padding for smaller size */
                margin-top: 10px; /* Add margin to separate from form */
                font-size: 14px; /* Adjust font size */
                width: 40%;
            }

            footer .form-group {
                margin-bottom: 10px; /* Remove bottom margin for form group */
            }

            footer .signup-link {
                text-align: left; /* Align signup text to the left */
                margin-top: 20px; /* Add top margin to separate from form */
            }

                footer .signup-link a {
                    color: #007bff;
                    text-decoration: none;
                }

            footer .input-group {
                margin-bottom: 10px; /* Add margin below input group */
            }

            footer .input-group-append .btn {
                padding: 8px 12px; /* Adjust button padding for smaller size */
            }

            footer h4, footer h5 {
                font-size: 1.2rem;
                margin-bottom: 1rem;
            }

            footer ul {
                list-style: none;
                padding: 0;
            }

                footer ul li {
                    margin-bottom: 0.5rem;
                }

                    footer ul li a {
                        color: #fff;
                        text-decoration: none;
                    }

                        footer ul li a:hover {
                            color: #ccc;
                        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Weekly Spend Report</h2>

        <div class="weekly-spend-container">
            <div class="arrow-btn prev-btn"><i class="fas fa-chevron-left"></i></div>
            <div class="weekly-spend-cards">
                @foreach (var weeklySpendData in Model.WeeklySpendData)
                {
                    <div class="weekly-spend-card">
                        <h5>@weeklySpendData.WeekStartDate.ToString("yyyy-MM-dd") - @weeklySpendData.WeekEndDate.ToString("yyyy-MM-dd")</h5>
                        <p>Total Spend: @weeklySpendData.TotalSpend.ToString("C")</p>
                    </div>
                }
            </div>
            <div class="arrow-btn next-btn"><i class="fas fa-chevron-right"></i></div>
        </div>

        <h2>Weekly Spend Line Graph</h2>
        <div id="weeklySpendChart"></div>
    </div>
</body>

