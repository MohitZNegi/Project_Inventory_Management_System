@model Inventory_Management_System.Models.Product
<title>@ViewData["Product Items"]</title>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<style>
    .btn-black {
        background-color: black;
        color: white;
        border: none;
        padding: 10px 20px;
        margin-top: 10px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-black:hover {
            background-color: white;
            color: black;
            border: 2px solid black;
        }

    .btn-white {
        background-color: white;
        color: black;
        border: 2px solid black;
        margin-top: 10px;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-white:hover {
            background-color: black;
            color: white;
        }

    /* Footer styling */
    footer {
        background-color: #343a40;
        color: #fff;
        padding: 40px 0;
        text-align: left;
        position: relative;
        margin-top: 50px;
        margin-bottom: -40px;
        margin-left: -200px;
        width: 130.9%;
    }

    footer button.btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: #fff;
        padding: 6px 10px;
        margin-top: 10px;
        font-size: 14px;
        width: 30%;
    }

    footer .form-group {
        margin-bottom: 0;
    }

    footer .signup-link {
        text-align: left;
        margin-top: 20px;
    }

        footer .signup-link a {
            color: #007bff;
            text-decoration: none;
        }

    footer .input-group {
        margin-bottom: 10px;
    }

    footer .input-group-append .btn {
        padding: 8px 12px;
    }

    footer h4, footer h5 {
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    footer ul {
        list-style: none;
        padding: 0;
    }

        footer ul li {
            margin-bottom: 0.5rem;
        }

            footer ul li a {
                color: #fff;
                text-decoration: none;
            }

                footer ul li a:hover {
                    color: #ccc;
                }

    /* Container for product description */
    .description-container {
        max-height: 300px;
        overflow-y: auto;
        text-align: left;
        max-width: 400px
    }

        .description-container h2 {
            margin-top: 0;
        }

    .product-image {
        display: block;
        margin-left: 200px;
    }

    .product-details {
        margin-left: 300px;
        width: 400px;
        margin-top: 20px;
        margin-top: -50px;
        margin-left: 650px;
        text-align: left;
    }

        .product-details hr {
            margin-top: 10px;
            margin-bottom: 10px;
        }

    #readMoreLink {
        margin-top: -10px;
        padding-bottom: 15px;
        display: block;
        text-decoration: underline;
        color: #007bff;
    }
</style>

    <!-- Product Details Section -->
    <div class="container mt-5">
        <div class="row align-items-center">
            <!-- Center both image and text vertically -->
            <div class="col-md-4 text-center">
                <!-- Center the image -->
                <img src="@Model.ProductImg" alt="Product Image" class="img-fluid product-image" style="height:500px">
            </div>
            <div class="col-md-8">
                <div class="d-flex flex-column justify-content-center align-items-left text-left h-100" style="margin-left:200px; margin-bottom: 165px; width:400px;">
                    <!-- Vertically and horizontally center text -->
                    @if (Model != null)
                    {
                        <h2>@Model.ProductName</h2>
                        <p>$@Model.ProductPrice</p>
                        <div id="shortDescription">
                            @{
                                string shortDesc = Model.ProductDescription;
                                if (shortDesc.Length > 55)
                                {
                                    int lastSpace = shortDesc.LastIndexOf(' ', 55);
                                    if (lastSpace != -1)
                                    {
                                        shortDesc = shortDesc.Substring(0, lastSpace) + "...";
                                    }
                                    else
                                    {
                                        shortDesc = shortDesc.Substring(0, 55) + "...";
                                    }
                                }
                            }
                            <p>@shortDesc</p>
                        </div>

                        <div id="fullDescription" style="display: none;">
                            <!-- Initially hide full description -->
                            <p>@Model.ProductDescription</p>
                        </div>
                        <a href="#" id="readMoreLink">Read More</a>
                        <div class="form-group">
                            <label for="quantity">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" class="form-control" placeholder="Enter quantity">
                        </div>
                        <button id="add-to-cart-btn" class="btn btn-black">Add to Cart</button>
                        <button type="button" class="btn btn-white">Buy Now</button>
                    }
                    else
                    {
                        <p>Product not found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
 
    <div class="product-details">
        <hr>
    <!-- Horizontal line -->
        <h4>Details</h4>
        <p>Learn more about our product and its ingredients, nutritional information, and cooking instructions.</p>
        <hr> <!-- Horizontal line -->

        <h4>Shipping</h4>
        <p>We offer fast and reliable shipping services to ensure that your order arrives fresh and on time.</p>
        <hr> <!-- Horizontal line -->

        <h4>Returns</h4>
        <p>If you're not completely satisfied with your purchase, we offer hassle-free returns and refunds.</p>
        <hr> <!-- Horizontal line -->
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <img src="https://res.cloudinary.com/dup5hdi05/image/upload/v1715090528/ware-master-high-resolution-logo-transparent_2_xnts9o.png" alt="Company Logo" style="height: 30px; width: 200px;">
                </div>
                <div class="col-md-3">
                    <h4><strong>About Us</strong></h4>
                    <ul class="list-unstyled">
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Support</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Careers</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h4><strong>Terms</strong></h4>
                    <ul class="list-unstyled">
                        <li><a href="#">Privacy</a></li>
                        <li><a href="#">T&S</a></li>
                        <li><a href="#">Help</a></li>
                        <li><a href="#">Feedback</a></li>
                        <li><a href="#">Refund Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h4>Subscribe</h4>
                    <form>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Enter your email">
                        </div>
                        <button type="submit" class="btn btn-primary">Subscribe</button>
                    </form>
                    <p>By subscribing, you agree to our Privacy Policy and consent to receive updates.</p>
                </div>
            </div>
        </div>
    </footer>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var shortDescription = document.getElementById("shortDescription");
                var fullDescription = document.getElementById("fullDescription");
                var readMoreLink = document.getElementById("readMoreLink");

                readMoreLink.addEventListener("click", function (e) {
                    e.preventDefault();
                    if (shortDescription.style.display === "none") {
                        shortDescription.style.display = "block"; // Show short description
                        fullDescription.style.display = "none"; // Hide full description
                        readMoreLink.innerText = "Read More"; // Change link text
                    } else {
                        shortDescription.style.display = "none"; // Hide short description
                        fullDescription.style.display = "block"; // Show full description
                        readMoreLink.innerText = "Hide"; // Change link text
                    }
                });
            });
        </script>

    <script>
        $(function () {
            // Add event listener for the "Add to Cart" button
            $('#add-to-cart-btn').click(function () {
                var productId = @Model.ProductID; // Get the product ID from the model
                var quantity = $('#quantity').val(); // Get the quantity from the input field

                // Make an AJAX request to the AddToCart action
                $.post('@Url.Action("AddToCart", "Product")', { id: productId, quantity: quantity })
                    .done(function (response) {
                        if (response.success) {
                            // Display a success message or update the UI as needed
                            alert('Product added to cart!');
                        } else {
                            // Display an error message or handle the error scenario
                            alert('Failed to add product to cart!');
                        }
                    })
                    .fail(function () {
                        // Display an error message or handle the error scenario
                        alert('Failed to add product to cart!');
                    });
            });
        });
    </script>

    }

