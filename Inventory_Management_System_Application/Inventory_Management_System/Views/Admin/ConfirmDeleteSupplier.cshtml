@model Inventory_Management_System.Models.Supplier

@{
    ViewData["Title"] = "Confirm Delete Supplier";
}

<style>
    body {
        font-family: Raleway, sans-serif;
        margin: 0;
        background-color: #f0f0f0;
        background-image: url('https://res.cloudinary.com/dup5hdi05/image/upload/v1715226768/Untitled_design_cty4ke.png');
        background-size: cover;
        min-height: 100vh;
        justify-content: center;
        align-items: center;
    }

    .floating-box {
        width: 600px;
        background-color: #f9f9f9;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 150px auto; /* Center horizontally */
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
        }

    .form-control {
        width: 100%;
    }

    .btn-danger {
        width: 100%;
        margin-top: 10px; /* Add margin top for spacing */
    }

    .btn-back {
        color: black;
        font-size: 13.5px;
    }

    .btn-back-container {
        text-align: right;
    }

    /* Adjustments to prevent line breaks */
    dl.row dt {
        white-space: nowrap;
    }

    dl.row dd {
        display: inline;
    }
</style>

<h1>Confirm Delete Supplier</h1>

<div class="floating-box">
    <a href="/Admin/Suppliers" class="btn-back">←Back to List</a>
    <h4 style="text-align:center;">Are you sure you want to delete this Supplier?</h4>
    <dl class="row">
        <div class="col-sm-12">
            <dt class="col-sm-2">
                Supplier Name
            </dt>
            <dd class="col-sm-10">
                @Model.SupplierName
            </dd>
            <dt class="col-sm-2">
                Location
            </dt>
            <dd class="col-sm-10">
                @Model.Location
            </dd>
            <dt class="col-sm-2">
                Contact Details
            </dt>
            <dd class="col-sm-10">
                @Model.ContactDetails
            </dd>
        </div>
    </dl>

    <form asp-action="DeleteSupplier" asp-route-id="@Model.SupplierID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
