@model Inventory_Management_System.Models.Supplier

@{
    ViewData["Title"] = "Confirm Delete Supplier";
}

<h1>Confirm Delete Supplier</h1>

<div>
    <h4>Are you sure you want to delete this supplier?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Supplier Name
        </dt>
        <dd class="col-sm-10">
            @Model.SupplierName
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Contact Details
        </dt>
        <dd class="col-sm-10">
            @Model.ContactDetails
        </dd>
    </dl>

    <form asp-action="DeleteSupplier" asp-route-id="@Model.SupplierID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>