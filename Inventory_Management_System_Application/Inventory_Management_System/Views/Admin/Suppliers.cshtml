            width: 35%;
        }

        footer .form-group {
            margin-bottom: 10px; /* Remove bottom margin for form group */
        }

        footer .signup-link {
            text-align: left; /* Align signup text to the left */
            margin-top: 20px; /* Add top margin to separate from form */
        }

            footer .signup-link a {
                color: #007bff;
                text-decoration: none;
            }

        footer .input-group {
            margin-bottom: 10px; /* Add margin below input group */
        }

        footer .input-group-append .btn {
            padding: 8px 12px; /* Adjust button padding for smaller size */
        }

        footer h4, footer h5 {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        footer ul {
            list-style: none;
            padding: 0;
        }

            footer ul li {
                margin-bottom: 0.5rem;
            }

                footer ul li a {
                    color: #fff;
                    text-decoration: none;
                }

                    footer ul li a:hover {
                        color: #ccc;
                    }
</style>

<table class="table">
    <thead>
        <tr>
            <th>Supplier Name</th>
            <th>Location</th>
            <th>Contact Details</th>
            <th>Associated Products</th>
            <th>Product Count</th>
            <th>Created By</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.SupplierName</td>
                <td>@supplier.Location</td>
                <td>@supplier.ContactDetails</td>
                <td>
                    @if (supplier.AssociatedProducts.Any())
                    {
                        <ul>
                            @foreach (var product in supplier.AssociatedProducts)
                            {
                                <li>@product.ProductName</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No products associated</span>
                    }
                </td>
                <td>@supplier.AssociatedProducts.Count</td>
                <td>@supplier.CreatedBy</td>
                <td>@supplier.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                @if (supplier.UpdatedAt == DateTime.MinValue)
                {
                    <td>N/A</td>
                }
                else
                {
                    <td>@supplier.UpdatedAt</td>
                }
                <td>
                    <a asp-action="EditSupplier" asp-route-id="@supplier.SupplierId">Edit</a> |
                    <a asp-action="ConfirmDeleteSupplier" asp-route-id="@supplier.SupplierId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

