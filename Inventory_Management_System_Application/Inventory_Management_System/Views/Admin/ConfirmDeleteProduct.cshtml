@model Inventory_Management_System.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<style>
    body {
        font-family: Raleway, sans-serif;
        margin: 0;
        background-color: #f0f0f0;
        background-image: url('https://res.cloudinary.com/dup5hdi05/image/upload/v1715226768/Untitled_design_cty4ke.png');
        background-size: cover;
        min-height: 100vh;
        justify-content: center;
        align-items: center;
    }

    .floating-box {
        width: 600px;
        height: 500px;
        background-color: #f9f9f9;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 60px auto; /* Center horizontally */
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
        }

    .form-control {
        width: 100%;
    }

    .btn-danger {
        width: 100%;
        margin-top: 10px; /* Add margin top for spacing */
    }

    .btn-back {
        color: black;
        font-size: 13.5px;
    }

    .btn-back-container {
        text-align: right;
    }

    /* Adjustments to prevent line breaks */
    dl.row dt {
        white-space: nowrap;
    }

    dl.row dd {
        display: inline;
    }
</style>

<h1>Delete Product</h1>

<hr />

<div class="floating-box">
    <a href="/Admin/Products" class="btn-back">←Back to List</a>
    <h4 style="text-align:center;">Are you sure you want to delete this product?</h4>
    <dl class="row">
        <div class="col-sm-12">
            <dt class="col-sm-2">
                Product Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt class="col-sm-2">
                Product Description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>

            <dt class="col-sm-2">
                Product Suppliers
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductSuppliers)
            </dd>

            <dt class="col-sm-2">
                Product Price
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductPrice)
            </dd>

            <dt class="col-sm-2">
                Product Quantity
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductQuantity)
            </dd>

            <dt class="col-sm-2">
                Created By
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
        </div>
    </dl>
    <form method="post" asp-action="DeleteProduct" asp-route-id="@Model.ProductID" enctype="multipart/form-data">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
