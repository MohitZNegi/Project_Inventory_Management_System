@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link href="~/css/site.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

</head>
<style>

    /* Global Styles */
    body {
        font-family: Raleway, sans-serif; margin: 0;
    }

    .container-fluid {
        padding-right: 0px;
        padding-left: 0px;
        margin-right: 0px;
        margin-left: 0px;
    }

/* Hero Section */
    .hero {
        background-color: #000;
        color: #fff;
        padding: 50px 0;
        text-align: center;
        width: 118.5%;
        max-width: 10000px; /* Adjust the max-width as needed */
        margin: 0 auto;
        margin-left: -120px;
        margin-bottom: 150px;
    }

    .hero h1 {
      font-size: 3rem;
      font-weight: bold;
      margin-bottom: 2rem;
    }

    .custom-padding {
        padding-right: 100px; /* Adjust the padding as needed */
    }

    .hero .col-md-6 {
        position: relative;
        right: 300px;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        margin-right: 50px;
    }

    .btn-outline-secondary {
      color: #fff;
      border-color: #fff;
    }

    /* Features Section */
    .features {
      padding: 80px 0;
      margin-bottom: -500px;
    }

    .feature {
      text-align: center;
      margin-bottom: 2rem;
    }

    .feature i {
      font-size: 3rem;
      color: #0d6efd;
      margin-bottom: 1rem;
    }

    .mb-4 {
        margin-bottom: 20px; /* Adjust as needed */
    }

    /* Benefits Section */
    .benefits {
      background-color: white;
      padding: 80px 0;
      text-align: center;
      margin-top: -120px;
    }

    .benefit {
      margin-bottom: 2rem;
    }

    .benefit i {
      font-size: 2rem;
      color: #0d6efd;
      margin-bottom: 1rem;
    }

    .btn-custom-white {
        background-color: white;
        color: black;
        border: 2px solid black;
    }

    .btn-custom-none {
        background-color: transparent;
        color: black;
        border: none;
    }

    .btn-custom-white:hover {
        background-color: black;
        color: white;
    }

    .btn-custom-none:hover {
        transform: scale(1); /* Increases size on hover */
        font-weight: bold; /* Makes text bold on hover */
    }

/* Product Categories Section */
    .floating-box {
        position: relative;
        z-index: 1;
        padding: 10px;
        background-color: #fff; /* Adjust background color as needed */
        box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1); /* Adjust shadow properties as needed */
    }
    .product-categories {
        padding: 50px 0;
    }

    .product-item {
        position: relative;
        overflow: hidden; /* Hide overflowing content */
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out; /* Add transitions for smooth animations */
    }

        .product-item a {
            display: block;
            text-decoration: none;
            transform: translateY(0); /* Initial position */
        }

            .product-item a:hover {
                box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
                transform: translateY(-10px); /* Move up by 10px on hover */
            }

        .product-item img {
            width: 100%;
            height: auto;
        }

    .center-image {
        display: block;
        margin: 0 auto;
        max-width: 100%;
        height: auto;
    }

    .product-info {
        padding: 10px;
    }

    .explore-header {
        font-size: 48px;
        font-weight: bold;
    }

    .product-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
        color: #333; /* Adjust text color as needed */
    }

    .product-price {
        font-size: 14px;
        color: #666;
    }

    .square-buttons {
        background-color: white;
        color: black;
        border: 2px solid black;
        width: 25%;
        margin-left: 550px;
        margin-top: 25px;
    }

    .square-buttons:hover {
            background-color: black;
            color: white;
    }



    /* Footer */
    footer {
        background-color: #343a40;
        color: #fff;
        padding: 40px 0;
        text-align: left; /* Align text to the left */
        width: 118.5%;
        position: relative;
        margin-top: 25px;
        margin-bottom: -40px;
    }
    footer button.btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: #fff;
        padding: 6px 10px; /* Adjust button padding for smaller size */
        margin-top: 10px; /* Add margin to separate from form */
        font-size: 14px; /* Adjust font size */
        width: 30%;
    }

    footer .form-group {
        margin-bottom: 10px; /* Remove bottom margin for form group */
    }

    footer .signup-link {
        text-align: left; /* Align signup text to the left */
        margin-top: 20px; /* Add top margin to separate from form */
    }

    footer .signup-link a {
        color: #007bff;
        text-decoration: none;
    }

    footer .input-group {
        margin-bottom: 10px; /* Add margin below input group */
    }

    footer .input-group-append .btn {
        padding: 8px 12px; /* Adjust button padding for smaller size */
    }

    footer h4, footer h5 {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    footer ul {
      list-style: none;
      padding: 0;
    }

    footer ul li {
      margin-bottom: 0.5rem;
    }

    footer ul li a {
      color: #fff;
      text-decoration: none;
    }

    footer ul li a:hover {
      color: #ccc;
    }

</style>
<div class="container-fluid">
<section class="hero custom-padding">
    <div class="row justify-content-end">
        <div class="col-md-6">
            <h1>Delivering Quality Food Products to Businesses</h1>
            <p>At our company, we are dedicated to distributing the finest food products to businesses, ensuring their success and satisfaction.</p>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary me-2">Buy Now</button>
                <button class="btn btn-outline-secondary">Learn More</button>
            </div>
        </div>
    </div>
</section>
</div>

<section class="benefits">
