  padding: 80px 0;
  text-align: center;
  margin-top: -120px;
}

.benefit {
  margin-bottom: 2rem;
}

.benefit i {
  font-size: 2rem;
  color: #0d6efd;
  margin-bottom: 1rem;
}

    .btn-custom-white {
        background-color: white;
        color: black;
        border: 2px solid black;
    }

    .btn-custom-none {
        background-color: transparent;
        color: black;
        border: none;
    }

    .btn-custom-white:hover {
        background-color: black;
        color: white;
    }

    .btn-custom-none:hover {
        transform: scale(1); /* Increases size on hover */
        font-weight: bold; /* Makes text bold on hover */
    }

/* Product Categories Section */
.product-categories {
