<style>

    /* Global Styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
    }

    .container-fluid {
        padding-right: 0px;
        padding-left: 0px;
        margin-right: 0px;
        margin-left: 0px;
    }

    .navbar {
        background-color: #333;
        color: #fff;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
    }

    .logo img {
        height: 40px;
    }

    .nav-links {
        list-style-type: none;
        display: flex;
    }

    .nav-links li {
        margin-right: 20px;
    }

    .nav-links a {
        color: #000 !important;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: #000;
    }

    .navbar-brand img {
        max-height: 100%;
        width: auto;
        margin-top: -4px;
    }

    .dropdown-menu {
        background-color: #fff; /* Set background color to white */
        color: #000; /* Set text color to black */
        display: none;
        position: absolute;
        padding: 10px;
        z-index: 1;
    }

    .dropdown-menu .dropdown-item {
        color: #000; /* Set text color of dropdown items to black */
    }

    .dropdown-menu .dropdown-item:hover {
        background-color: #ccc; /* Set background color of hovered dropdown items */
    }


    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .square-button {
        width: 100px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 0;
        transition: background-color 0.3s, color 0.3s;
    }

    #login:hover {
        background-color: black !important; /* Set background to black on hover */
        color: white !important; /* Set text color to white on hover */
    }

    #register:hover {
        background-color: white !important; /* Set background to white on hover */
        color: black !important; /* Set text color to black on hover */
    }

    .auth-buttons a {
        color: #fff;
        text-decoration: none;
        margin-left: 20px;
    }

    .auth-buttons a:hover {
        color: #ff9900;
    }


/* Hero Section */
.hero {
        background-color: #000;
        color: #fff;
        padding: 100px 0;
        text-align: center;
        width: 100%;
}

.hero h1 {
  font-size: 3rem;
  font-weight: bold;
  margin-bottom: 2rem;
}

    .custom-padding {
        padding-right: 25px; /* Adjust the padding as needed */
    }

    .hero .col-md-6 {
        position: relative;
        right: 300px;
    }

.btn-primary {
    background-color: #0d6efd;
    border-color: #0d6efd;
}

.btn-outline-secondary {
  color: #fff;
  border-color: #fff;
}

/* Features Section */
.features {
  padding: 80px 0;
  margin-bottom: -500px;
}

.feature {
  text-align: center;
  margin-bottom: 2rem;
}

.feature i {
