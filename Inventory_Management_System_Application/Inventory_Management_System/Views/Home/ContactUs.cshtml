@model ContactFormModel
@{
    ViewData["Title"] = "Contact Us";
}

<head>
    <title>Contact Us</title>
    <style>
        /* Your CSS styles here */
        .contact-section {
            padding: 80px 0;
            background-color: white;
            text-align: center;
        }

        .contact-heading {
            font-size: 36px;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .contact-paragraph {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 40px;
        }

        .contact-form {
            max-width: 600px;
            margin: 0 auto;
            text-align: left;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .contact-form .form-group {
                display: flex;
                justify-content: space-between;
                width: 100%;
            }

                .contact-form .form-group input {
                    width: 48%;
                    padding: 10px;
                    margin-bottom: 20px;
                    border: 1px solid #ced4da;
                    border-radius: 4px;
                    font-size: 16px;
                }

            .contact-form input,
            .contact-form select,
            .contact-form textarea {
                width: 100%;
                padding: 10px;
                margin-bottom: 20px;
                border: 1px solid #ced4da;
                border-radius: 4px;
                font-size: 16px;
            }

            .contact-form select {
                background-color: white;
            }

            .contact-form button {
                padding: 10px 20px;
                border: none;
                border-radius: 4px;
                background-color: black;
                color: white;
                font-size: 16px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .contact-form button:hover {
                    background-color: white;
                    color: black;
                    border: 2px solid black;
                }

        /* Floating box styles */
        .floating-box {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            border: 1px solid #ccc;
            padding: 20px;
            z-index: 1000;
            display: none;
        }

        /* Okay button styles */
        .okay-button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            background-color: black;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .okay-button:hover {
                background-color: white;
                color: black;
                border: 2px solid black;
            }
    </style>
</head>
<body>
    <div class="contact-section">
        <h2 class="contact-heading">Get in Touch</h2>
        <p class="contact-paragraph">We would love to hear from you! Please fill out the form below and we will get back to you as soon as possible.</p>
        <form asp-controller="Home" asp-action="ContactUs" method="post" class="contact-form">
            <div class="form-group">
                <input type="text" name="FirstName" placeholder="First Name" required />
                <input type="text" name="LastName" placeholder="Last Name" required />
            </div>
            <input type="email" name="Email" placeholder="Email" required />
            <input type="tel" name="Phone" placeholder="Phone Number" required />
            <select name="Topic" required>
                <option value="" disabled selected>Choose a Topic</option>
                <option value="general">General Inquiry</option>
                <option value="support">Support</option>
                <option value="Refund">Refund Request</option>
                <option value="other">Other</option>
            </select>
            <textarea name="Message" rows="5" placeholder="Your Message" required></textarea>
            <button type="submit">Send Message</button>
        </form>
        <!-- Floating box for ViewData -->
        <div id="floatingBox" class="floating-box">
            @if (ViewData["Message"] != null)
            {
                <p>@ViewData["Message"]</p>
                <button id="okayButton" class="okay-button">Okay</button>
            }
        </div>

        <!-- JavaScript to handle the floating box -->
        <script>
            // Show the floating box
            function showFloatingBox() {
                var floatingBox = document.getElementById('floatingBox');
                floatingBox.style.display = 'block';
            }

            // Hide the floating box
            function hideFloatingBox() {
                var floatingBox = document.getElementById('floatingBox');
                floatingBox.style.display = 'none';
            }

            // Show the floating box when ViewData is not null
            @if (ViewData["Message"] != null)
            {
                <text>
                    showFloatingBox();
                </text>
            }

                    // Add event listener to the okay button
                    var okayButton = document.getElementById('okayButton');
            okayButton.addEventListener('click', function () {
                hideFloatingBox();
            });
        </script>
    </div>
</body>
