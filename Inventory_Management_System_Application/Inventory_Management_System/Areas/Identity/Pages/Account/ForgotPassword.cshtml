@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>

    .image-container {
        margin-top: 50px; /* Adjust this value as needed */
    }

    /* Footer */
    footer {
        background-color: #343a40;
        color: #fff;
        padding: 40px 0;
        text-align: left;
        width: 125.3%;
        position: relative;
        margin-top: 25px;
        margin-bottom: -40px;
    }

        footer button.btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: #fff;
            padding: 6px 10px;
            margin-top: 10px;
            font-size: 14px;
            width: 30%;
        }

        footer .form-group {
            margin-bottom: 10px;
        }

        footer .signup-link {
            text-align: left;
            margin-top: 20px;
        }

            footer .signup-link a {
                color: #007bff;
                text-decoration: none;
            }

        footer .input-group {
            margin-bottom: 5px;
        }

        footer .input-group-append .btn {
            padding: 8px 12px;
        }

        footer h4, footer h5 {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        footer ul {
            list-style: none;
            padding: 0;
        }

            footer ul li {
                margin-bottom: 0.5rem;
            }

                footer ul li a {
                    color: #fff;
                    text-decoration: none;
                }

                    footer ul li a:hover {
                        color: #ccc;
                    }
</style>

<h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-6" style="margin-top: 150px;">
            <h2><strong>Reset your password</strong></h2>
            <p>Don't worry, we'll help you regain access to your account.</p>
            <form method="post" oninput="toggleButton()">
                <div class="form-group">
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" id="emailInput" />
                        <label asp-for="Input.Email" class="form-label" aria-required="true"></label>
                        <span asp-validation-for="Input.Email" class="text-danger" aria-required="true"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary mt-3" id="resetButton" style="background-color:black; color: white;" disabled>Reset Password</button>
                </div>
            </form>
            <p class="mt-3">If the email matches, you will be sent a verification link.</p>
        </div>
        <div class="col-md-6 d-flex align-items-center justify-content-center image-container">
        <img src="https://i.etsystatic.com/10919371/r/il/067ae5/1709277225/il_fullxfull.1709277225_n6ge.jpg" alt="Password Reset Image" class="img-fluid">
        </div>
    </div>

<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <img src="https://res.cloudinary.com/dup5hdi05/image/upload/v1715090528/ware-master-high-resolution-logo-transparent_2_xnts9o.png" alt="Company Logo" style="height: 30px; width: 200px;">
            </div>
            <div class="col-md-3">
                <h4><strong>About Us</strong></h4>
                <ul class="list-unstyled">
                    <li><a href="/home/contactus">Contact</a></li>
                    <li><a href="/home/faqs">FAQs</a></li>
                    <li><a href="/home/aboutus">About Us</a></li>
                </ul>
            </div>

            <div class="col-md-3">
                <h4><strong>Terms</strong></h4>
                <ul class="list-unstyled">
                    <li><a href="/home/privacy">Privacy</a></li>
                    <li><a href="/home/termsandservices">T&S</a></li>
                    <li><a href="/home/refundpolicy">Refund Policy</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <h4>Subscribe</h4>
                <form>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Enter your email">
                    </div>
                    <button type="submit" class="btn btn-primary">Subscribe</button>
                </form>
                <p>By subscribing, you agree to our Privacy Policy and consent to receive updates.</p>
            </div>
        </div>
    </div>
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleButton() {
            var emailInput = document.getElementById('emailInput');
            var resetButton = document.getElementById('resetButton');
            if (emailInput.value.trim() === '') {
                resetButton.disabled = true;
            } else {
                resetButton.disabled = false;
            }
        }
    </script>

}
